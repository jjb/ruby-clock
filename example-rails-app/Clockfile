using RubyClock::DSL

load '../example-app/Clockfile'

every('2 seconds') do
  puts Example.count
end

every('2 seconds') do
  puts "we expect schedule to not be available inside a job: #{!defined?(schedule)}"
  puts Example.check_for_global_method
end

every('2 seconds') do
  RubyClock::Runners.rake 'about'
end
