on_error do |job, error|
  puts "An error has occurred: #{error.class}: #{error.message}"
end

every('2 seconds') do
  puts "hello from a ruby-clock job"
end

every('2 seconds') do
  shell 'say hello'
end

every('2 seconds') do
  puts Example.count
end

every('2 seconds') do
  raise "An error."
end

cron('*/10 * * * * *') do
  puts "cron running on every 10th second #{Time.now}"
end
